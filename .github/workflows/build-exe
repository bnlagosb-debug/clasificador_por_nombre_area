name: Build Windows EXE

on:
  workflow_dispatch:

jobs:
  build:
    runs-on: windows-latest

    steps:
      - uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install PyInstaller
        run: |
          python -m pip install --upgrade pip
          pip install pyinstaller

      - name: Build EXE
        run: |
          pyinstaller --onefile --noconsole --name ClasificadorArea clasificador_por_nombre_area.py

      - name: Upload EXE
        uses: actions/upload-artifact@v4
        with:
          name: ClasificadorArea-EXE
          path: dist/ClasificadorArea.exe
